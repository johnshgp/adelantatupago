<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit.adelantatupago</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <!-- Default Journal -->
                <xpath expr="//div[@data-key='account']//div[hasclass('row','mt16', 'o_settings_container')][4]">
                    <div class="col-12 col-lg-6 o_setting_box" id="journal_id_def">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Diario para asientos contables de terceros</span>
                            <div class="text-muted">
                                Diario por defecto para asiento contables con facturas de terceros
                            </div>
                            <div class="text-muted">
                                <field name="journal_id_def"/>
                            </div>
                        </div>
                    </div>
                </xpath>

            
            </field>
        </record>
    
    </data>
</odoo>